<p id="notice"><%= notice %></p>

<h1>Listing General Inventories</h1>

<%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
  <div>
    <%= "Search" %><br>
    <%= f.text_field(
      :search_query, class: 'form-control'
    ) %>
  </div>
  <br>
  <div>
    <%= "Sorted by" %><br>
    <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {}, { class: 'form-control' }) %>
  </div>
  <br>
  <div>
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
    ) %>
  </div>
  <div>
    <%= f.submit 'Filter', class: 'btn btn-default' %>
  </div>
  <br>
<% end %>

<%= render(
  partial: 'inventories/listgeneral',
  locals: { inventories: @inventories }
) %>

<%= link_to 'New Inventory', new_inventory_path(:inventorytype => "General") %>
