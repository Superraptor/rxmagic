<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@prescription) do |f| %>
      <% if @prescription.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@prescription.errors.count, "error") %> prohibited this prescription from being saved:</h2>
    
          <ul>
          <% @prescription.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="field">
        <%= f.label "Rx ID" %><br>
        <%= f.number_field :rxid, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label "Dose" %><br>
        <%= f.text_field :dose, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label "Frequency Taken" %><br>
        <%= f.text_field :frequencytaken, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label "Route Taken" %><br>
        <%= f.text_field :routetaken, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label "Date Given" %><br>
        <%= f.date_select :dategiven, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label "RxNorm NDC" %><br>
        <%= f.text_field :medicationsrxnormndc, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label "Provider ID" %><br>
        <%= f.number_field :providersdrid, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label "Patient ID" %><br>
        <%= f.number_field :patientsptid, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit "Create Prescription", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>